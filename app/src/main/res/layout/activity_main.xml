<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xygit.note.notebook.main.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_replace_activity_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/layout_background_color"
        app:layout_constraintBottom_toTopOf="@+id/v_divider"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v4.view.ViewPager>


    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_grey"
        app:layout_constraintBottom_toTopOf="@id/bt_navigation_activity_main"
        app:layout_constraintTop_toBottomOf="@id/vp_replace_activity_main" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bt_navigation_activity_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        app:itemIconTint="@drawable/selector_tab_color"
        app:itemTextColor="@drawable/selector_tab_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_divider"
        app:menu="@menu/bottom_navigation_tab">

    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>
