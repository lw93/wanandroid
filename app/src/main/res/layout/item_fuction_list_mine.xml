<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_16">

    <ImageView
        android:id="@+id/iv_function_icon"
        android:layout_width="@dimen/with_36"
        android:layout_height="@dimen/with_36"
        android:scaleType="fitXY"
        android:src="@drawable/ic_account_circle_white_48dp" />

    <TextView
        android:id="@+id/tv_function_name"
        style="@style/PrimaryText_black_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:paddingLeft="@dimen/padding_16"
        android:text="测试"
        app:layout_constraintBottom_toBottomOf="@+id/iv_function_icon"
        app:layout_constraintLeft_toRightOf="@+id/iv_function_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_function_icon" />

</android.support.constraint.ConstraintLayout>